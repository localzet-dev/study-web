generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id                 BigInt    @id @default(autoincrement())
  name               String
  email              String    @unique
  password           String
  reset_token        String?   @unique
  reset_token_expiry DateTime?
  tasks              tasks[]
  timer              timer[]
}

model tasks {
  id          BigInt   @id @default(autoincrement())
  id_user     BigInt
  title       String
  description String
  priority    Int
  status      Boolean
  created     DateTime
  completed   DateTime
  pomodoros   BigInt

  user  users   @relation(fields: [id_user], references: [id])
  timer timer[]
}

model timer {
  id                  BigInt @id @default(autoincrement())
  id_user             BigInt
  id_task             BigInt
  work_interval       BigInt @default(25)
  break_interval      BigInt @default(5)
  pomodoros_completed BigInt

  user users @relation(fields: [id_user], references: [id])
  task tasks @relation(fields: [id_task], references: [id])
}
