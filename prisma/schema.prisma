generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model users {
  id                 Int       @id @default(autoincrement())
  name               String
  email              String    @unique
  password           String
  role               String    @default("user") // Роль: "user" или "admin"
  reset_token        String?   @unique
  reset_token_expiry DateTime?
  tasks              tasks[]
  timer              timer[]
}

model tasks {
  id          Int       @id @default(autoincrement())
  id_user     Int
  title       String
  description String?
  priority    Int       @default(1)
  status      Boolean
  created     DateTime
  completed   DateTime?
  pomodoros   Int

  user  users   @relation(fields: [id_user], references: [id])
  timer timer[]
}

model timer {
  id                  Int @id @default(autoincrement())
  id_user             Int
  id_task             Int @unique
  work_interval       Int @default(25)
  break_interval      Int @default(5)
  pomodoros_completed Int

  user users @relation(fields: [id_user], references: [id])
  task tasks @relation(fields: [id_task], references: [id])
}
